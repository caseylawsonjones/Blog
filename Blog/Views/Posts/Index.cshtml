                        <li>
                            <a href="~/Home/Index">Home</a>
                        </li>
                        <li>
                            <a href="#">Blog</a>
                        </li>
                        <li class="active">Decide How This Should Work</li>
                    </ul>
                </div>
            </div>
            <!-- Hide or Display Create New Post Link -->
            @if (User.IsInRole("Admin")) {
                @Html.ActionLink("Create New Post", "Create")
            }
        </div>
