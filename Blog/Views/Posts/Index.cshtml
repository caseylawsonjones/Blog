                    <!-- BLOG POST LIST -->
                    <div class="col-sm-12 col-md-9">
                        <ul class="timeliner blog right">
                            @foreach (var entry in Model) {
                                <!-- Each Post as a List Item -->
                                <li>
                                    <!-- Post Author and Future Tag List Display -->
                                    <div class="timeline-meta">
                                        <div class="meta_details">by @entry.Author</div>
                                    </div>
                                    <!-- Post Date Bubble -->
                                    <div class="timeline-icon">
                                        <div class="date">
                                            @entry.Created.ToString("MMM")
                                            <span>@entry.Created.Day</span>
                                        </div>
                                        <span style="color:white">@entry.Created.Year</span>
                                    </div>
                                    <!-- Post Title, Body and Media -->
                                    <div class="timeline-panel">
                                        <div class="timeline-body">
                                            <div class="post-item">
                                                <!-- Post Title -->
                                                <h2 class="post-title">
                                                    <a href="blog-single.html">@entry.Title</a>
                                                </h2>
                                                <!-- Post Body and Media -->
                                                <div class="post-content">
                                                    @if(entry.MediaUrl != null) {
                                                        @entry.MediaUrl;
                                                    <br />
                                                    }
                                                    @entry.Body
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            }
