    <div id="page">
        <!-- PAGE HEADER WITH TITLE AND BREADCRUMBS -->
        <div class="page-header">
            <!-- Page Title -->
            <div class="container">
                <h1 class="title">Casey's Personal Blog</h1>
            </div>
            <!-- Breadcrumbs -->
            <div class="breadcrumb-box">
                <div class="container">
                    <!-- List of Breadcrumbs -->
